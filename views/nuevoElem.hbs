<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h2>Nuevo producto</h2>
    </div>
    <div class="card-body">
      <form action="/tienda/nuevo_elemento" method="POST">
        <div class="mb-3">
          <input type="text" name="tipo" class="form-control" placeholder="Tipo" autofocus>
        </div>
        <div class="mb-3">
          <input type="text" name="nombre" class="form-control" placeholder="Nombre">
        </div>
        <div class="mb-3">
          <input type="text" name="color" class="form-control" placeholder="Color">
        </div>
        <div class="mb-3">
          <input type="text" name="imgurl" class="form-control" placeholder="Url_imagen">
        </div>
        <div class="mb-3">
          <input type="text" name="existencias" class="form-control" placeholder="Existencias">
        </div>
        <div class="mb-3">
          <input type="text" name="precio" class="form-control" placeholder="Precio">
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit">Guardar</button>
        </div>
      </form>
    </div>
  </div>

</div>
